<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.unicauca.Vista.EstudianteController">
   <children>
      <Label text="Estado de Proyecto de Grado" textFill="#2d5a7a">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>
      
      <Label fx:id="labelBienvenida" text="Bienvenido" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      <Label fx:id="labelPrograma" text="Programa: " />
      
      <Separator prefWidth="500.0" />
      
      <Label text="INFORMACIÓN DEL PROYECTO" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2d5a7a;" />
      
      <Label fx:id="labelTituloProyecto" text="Título: No asignado" style="-fx-font-size: 14px; -fx-wrap-text: true;" maxWidth="500.0" />
      <Label fx:id="labelTipoProyecto" text="Tipo: No asignado" style="-fx-font-size: 14px;" />
      <Label fx:id="labelDirectores" text="Directores: --" style="-fx-font-size: 14px;" />
      
      <VBox spacing="10.0" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 15px; -fx-border-radius: 5px; -fx-background-radius: 5px;">
         <Label text="ESTADO ACTUAL" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
         <Label fx:id="labelEstadoProyecto" text="Sin proyecto registrado" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #666666;" />
         <Label fx:id="labelDetalleEstado" text="No se ha subido ningún formato A" style="-fx-font-size: 12px; -fx-text-fill: #888888; -fx-wrap-text: true;" maxWidth="400.0" />
      </VBox>
      
      <Label fx:id="labelFechaSubida" text="Fecha de subida: --" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
      <Label fx:id="labelFechaRevision" text="Fecha de revisión: --" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
      
      <Separator prefWidth="500.0" />
      
      <Label fx:id="labelFechaActualizacion" text="Última actualización: --/--/----" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
      
      <VBox spacing="10.0" alignment="CENTER">
         <Button fx:id="btnActualizar" text="Actualizar Estado" onAction="#actualizarEstado" prefWidth="200.0" />
         <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" onAction="#cerrarSesion" style="-fx-background-color: #ff4444; -fx-text-fill: white;" prefWidth="200.0" />
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>